set terminal pngcairo size 600, 600
set size square 1,1
set datafile separator ","
unset arrow
unset label
set view map
set tics front
set cbrange[-2.0:2.0]
set yrange[0:592]
set xrange[0:140]

do for [i = 0:100] {
w = i * 10
filename = sprintf("0-xz_snapshot3D_a_%0.f.csv", w)
termout = sprintf("3D_xz-%0.f.png", w)
set output termout
l_title = sprintf("time steps = %0.f", w)
set xlabel "x"
set ylabel "z"
set title l_title offset 0, 1
splot filename using 1:2:5 with pm3d notitle
}